{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    },
    "ignore": [
      "./patchright/**/*",
      "./node_modules/**/*",
      "./dist/**/*",
      "./test-results/**/*",
      "./playwright-report/**/*"
    ]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80,
    "ignore": [
      "./patchright/**/*",
      "./node_modules/**/*",
      "./dist/**/*",
      "./test-results/**/*",
      "./playwright-report/**/*"
    ]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "trailingCommas": "es5"
    }
  }
}
